<Window x:Class="ItaCursor.VirtualCursorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItaCursor"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        AllowsTransparency="True" 
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        Topmost="True"
        WindowStyle="None"  
        Title="VirtualCursorWindow" Height="24" Width="24">
    <Window.Background>
        <SolidColorBrush Opacity="0.0" Color="Black"/>
    </Window.Background>
    <Grid>
        <Image Height="24" VerticalAlignment="Top" HorizontalAlignment="Left" Width="24" Source="{svgc:SvgImage Source=/Resources/cursor.svg, AppName=TouchYazirusi}" />
    </Grid>
</Window>
